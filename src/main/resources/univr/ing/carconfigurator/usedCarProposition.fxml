<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" prefHeight="581.0" prefWidth="846.0" styleClass="root-pane"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="univr.ing.carconfigurator.UsedCarController">
   <children>
      <AnchorPane fx:id="textPane" layoutX="39.0" layoutY="62.0" prefHeight="400.0"
                  prefWidth="350.0">
         <children>
            <TextArea fx:id="imgPaths" editable="false" layoutX="5.0" layoutY="30.0"
                      prefHeight="350.0" prefWidth="340.0" AnchorPane.bottomAnchor="5.0"
                      AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" />
            <Label layoutX="14.0" layoutY="14.0" text="Immagini caricate"
                   AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="14.0" />
            <Button layoutX="271.0" layoutY="10.0" mnemonicParsing="false"
                    onAction="#clearAllPaths" text="Pulisci lista"
                    AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="10.0" />
         </children>
      </AnchorPane>
      <AnchorPane fx:id="imagePane" layoutX="455.0" layoutY="69.0" prefHeight="400.0"
                  prefWidth="300.0">
         <children>
            <ImageView fx:id="imagePreview" fitHeight="200.0" fitWidth="200.0"
                       layoutX="34.0" layoutY="220.0" pickOnBounds="true"
                       preserveRatio="true" AnchorPane.leftAnchor="50.0"
                       AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0" />
            <Button layoutX="50.0" layoutY="269.0" mnemonicParsing="false"
                    onAction="#prevImage" text="&lt;-" AnchorPane.bottomAnchor="100.0"
                    AnchorPane.leftAnchor="50.0" />
            <Button layoutX="177.0" layoutY="275.0" mnemonicParsing="false"
                    onAction="#nextImage" text="-&gt;" AnchorPane.bottomAnchor="100.0"
                    AnchorPane.rightAnchor="50.0" />
         </children>
      </AnchorPane>
      <Label fx:id="title" layoutX="342.0" layoutY="14.0" text="Carica il tuo usato da valutare. Inserisci alcune foto e conferma l'invio.">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button mnemonicParsing="false" text="Esci" AnchorPane.bottomAnchor="15.0"
              onAction="#onExitButton" AnchorPane.rightAnchor="15.0" />
      <Button fx:id="cancelButton" mnemonicParsing="false" text="Annulla"
              onAction="#onCancelButton" AnchorPane.bottomAnchor="15.0" />
   </children>
</AnchorPane>
